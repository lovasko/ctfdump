cflags = -Wall -Wextra -ansi -pedantic -I/usr/include/ctf/
ldflags = -lbsdctf

rule compile
 command = clang $cflags -c $in -o $out

rule link
 command = clang -o $out $in $ldflags

build bin/ctfdump: link obj/main.o obj/labels.o obj/general.o

build obj/main.o: compile src/main.c
build obj/labels.o: compile src/labels.c
build obj/general.o: compile src/general.c

